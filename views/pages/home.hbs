{{#extend "stylesheets"}}
<link rel="stylesheet" href="/css/page/home.css"/>
{{/extend}}


<div class="bg"></div>
<div class="content">
	<header class="main-header clearfix">
		<div class="wrapper">

			<h1>FIFA WORLD CUP 2014<br>PREDICTION</h1>
			<img src="/images/logo-wc2014.png" alt="" />
		</div>
	</header>
	<div class="main-content">
		<div class="wrapper">
			<h4>Updated on <time>June 17, 2014 - 23:32PM</time></h4>
			<div class="list-container clearfix">
				<table border="0" cellspacing="0" cellpadding="0" width="100%">
					<thead>
						<tr>
							<th width="5%"></th>
							<th width="70%">Name</th>
							<th width="15%px" class="points">Points</th>
						</tr>
					</thead>
					<tbody>
						{{#foreach this.data}}
						<tr>
							<td>{{math this.$index "+" 1}}</td>
							<td>
								<a href='user/{{this._id}}'> 
									{{this.user.firstname}} {{this.user.lastname}}
								</a>
							</td>
							<td class="points">{{this.totalScore}}</td>
						</tr>
						{{/foreach}}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>